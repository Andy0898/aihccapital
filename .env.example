# AIHC Capital Admin Environment Configuration
# Copy this file to .env.local for local development

# Admin Authentication - Environment Variable Method
# Uncomment and set these values to use environment-based authentication
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=your_secure_password_here
# ADMIN_EMAIL=admin@aihccapital.com

# Vite Environment Variables (for client-side access)
# Note: Only variables prefixed with VITE_ are exposed to the client
# VITE_ADMIN_USERNAME=admin
# VITE_ADMIN_PASSWORD=your_secure_password_here
# VITE_ADMIN_EMAIL=admin@aihccapital.com

# Storage Configuration
# Options: localStorage, environment, jsonFile
VITE_AUTH_STORAGE_METHOD=localStorage

# Application Configuration
VITE_APP_TITLE=AIHC Capital Admin
VITE_API_BASE_URL=http://localhost:3000/api

# Development Settings
VITE_DEV_MODE=true
VITE_ENABLE_DEBUG=true